<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:background="?android:attr/activatedBackgroundIndicator">

    <RelativeLayout
        android:id="@+id/contact_holder"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingRight="10pt"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/contact_tmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/contact_tmb"
            android:layout_toRightOf="@+id/contact_tmb"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/contact_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contact_name"
            android:layout_below="@+id/contact_name"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@+id/contact_tmb"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:textSize="14dp"
            tools:text="City: Pune"/>

    </RelativeLayout>
</FrameLayout>