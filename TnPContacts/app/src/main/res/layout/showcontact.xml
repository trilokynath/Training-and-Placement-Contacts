<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:id="@+id/contact_name_holder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingRight="-80pt"
            android:background="@drawable/border">


            <ImageView
                android:id="@+id/contact_tmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_person" />

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/contact_tmb"
                android:layout_toRightOf="@+id/contact_tmb"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/background"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Trilokynath Wagh" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_mobile_holder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingRight="-80pt"
            android:layout_marginTop="10dp"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/contact_mobile_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_phone" />

            <TextView
                android:id="@+id/contact_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/contact_mobile_icon"
                android:layout_toRightOf="@+id/contact_mobile_icon"
                android:layout_toLeftOf="@+id/fab"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/background"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="8390861559" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="end"
                android:layout_margin="0dp"
                android:tint="#fff"
                app:backgroundTint="#3fe529"
                app:rippleColor="#fff"
                app:srcCompat="@drawable/ic_phone" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_email_holder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingRight="-80pt"
            android:layout_marginTop="10dp"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/contact_email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_email_big" />

            <TextView
                android:id="@+id/contact_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/contact_email_icon"
                android:layout_toLeftOf="@+id/email_send"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="#3978ff"
                tools:text="trilokynathdfgsdfgdsfgfdsgfdsgwagh@gmail.com" />

            <ImageView
                android:id="@+id/email_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:srcCompat="@android:drawable/ic_menu_send" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_comapny_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:paddingRight="-80pt">

            <ImageView
                android:id="@+id/contact_comapny_icon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="false"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_company" />

            <TextView
                android:id="@+id/contact_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/contact_comapny_icon"
                android:layout_toLeftOf="@+id/company_location"
                android:layout_toRightOf="@+id/contact_comapny_icon"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:scrollbars="vertical"
                android:textColor="@color/background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/company_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:srcCompat="@android:drawable/ic_menu_mylocation" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_city_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:paddingRight="-80pt">

            <ImageView
                android:id="@+id/contact_city_icon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="false"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_city" />

            <TextView
                android:id="@+id/contact_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/contact_city_icon"
                android:layout_toLeftOf="@+id/city_location"
                android:layout_toRightOf="@+id/contact_city_icon"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:scrollbars="vertical"
                android:textColor="@color/background"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Pune" />

            <ImageView
                android:id="@+id/city_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:srcCompat="@android:drawable/ic_menu_mylocation" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp"
            android:text="Note"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/edit_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_note_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="20dp"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/contact_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:singleLine="false"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>